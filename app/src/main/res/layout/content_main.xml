        android:id="@+id/view2"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <com.qozix.tileview.TileView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view3"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <com.qozix.tileview.TileView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view4"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <com.qozix.tileview.TileView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view5"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>




